              <span>일과</span>
              <span>3사단</span>
              <span>휴가</span>
            </div>
          </div>

          <div class="community">
            <div>
              <select class="local-select">
                <option value="id">최신순</option>
                <option value="pop">추천순</option>
                <option value="old">오래된 순</option>
                <option value="low">평점 높은 순</option>
                <option value="high">평점 낮은 순</option>
              </select>
            </div>
            <%for(var i = 0; i < localdata.length; i ++){%>
            <div>
              <div class="comm01">
                <div style="display: flex;">
                  <span class="title"><%=localdata[i].name%></span>
                  <span class="hashtag">#<%=localdata[i].type%></span>
                </div>
                <div class="comm01-cell" style="margin-top: 20px;">
                  <span>주소</span>
                  <span><%=localdata[i].address%></span>
                </div>
                <div class="comm01-cell">
                  <span>전화 번호</span>
                  <span><%=localdata[i].phone_number%></span>
                </div>
                <div class="local-img">
                  <img  class="local-img"src="<%=localdata[i].image_url%>" />
                </div>

                <p>
                  <%=localdata[i].content%>
                </p>

                <div style="display: flex;">
                  <div class="flo">
                    <img class="local-img02" src="icon/hospitable.png">
                    <span><%=localdata[i].show_count%></span>
                  </div>
                  <div class="flo">
                    <img class="local-img02" src="icon/comment.png">
                    <span><%=localdata[i].like_count%></span>
                  </div>
                  <div class="flo">
                    <img class="local-img02" src="icon/handclap.png">
                    <span><%=localdata[i].comment_count%></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="border"></div>
            <%}%>
           
              </div>
              <div class="border"></div>
             
              </div>
              

      <div class="wrap_R" style="margin:20px 0px 0px 20px; ">
